{
    "compilerOptions": {
        "outDir": "./dist",
        "allowJs": true,
        "esModuleInterop": true,
        "target": "es2019",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}

